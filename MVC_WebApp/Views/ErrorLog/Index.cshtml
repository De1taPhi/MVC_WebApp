@model IEnumerable<MVC_WebApp.Models.ErrorLog>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StackTrace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ErrorTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StackTrace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ErrorTime)
            </td>
					<td>
						<a asp-action="Details" asp-route-id="@item.Id">Details</a> 
					</td>

        </tr>
}
    </tbody>
</table>
</body>
</html>
