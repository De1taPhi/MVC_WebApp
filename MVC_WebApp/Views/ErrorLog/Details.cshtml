@model MVC_WebApp.Models.ErrorLog

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error happened</title>
</head>
<body>

<div>
    <h4>ErrorLog</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StackTrace)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StackTrace)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ErrorTime)
